<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/name_Login"
        android:layout_width="@dimen/fab_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimension_124"
        android:hint="@string/name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="@dimen/fab_width"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        app:layout_constraintTop_toBottomOf="@id/name_Login"
        app:layout_constraintBottom_toTopOf="@id/password_Acces"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/password_Acces"
        android:layout_width="@dimen/fab_width"
        android:layout_height="wrap_content"
        android:hint="@string/passwordA"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintBottom_toTopOf="@id/password_Acces2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/password_Acces2"
        android:layout_width="@dimen/fab_width"
        android:layout_height="wrap_content"
        android:hint="@string/conf_pass"
        app:layout_constraintTop_toBottomOf="@id/password_Acces"
        app:layout_constraintBottom_toTopOf="@id/crear_Cuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/crear_Cuenta"
        android:layout_width="@dimen/dimension_200"
        android:layout_height="@dimen/dimension_56"
        android:text="@string/crear_cuent"
        android:textColor="@color/background"
        android:background="@drawable/red_button"
        app:layout_constraintTop_toBottomOf="@id/password_Acces2"
        app:layout_constraintBottom_toTopOf="@id/cancelar_Cuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/cancelar_Cuenta"
        android:layout_width="@dimen/dimension_144"
        android:layout_height="@dimen/dimension_40"
        android:text="@string/cancelar"
        android:textColor="@color/background"
        android:background="@drawable/red_button"
        android:layout_marginBottom="@dimen/dimension_124"
        app:layout_constraintTop_toBottomOf="@id/crear_Cuenta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>