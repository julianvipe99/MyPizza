<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    app:cardElevation="@dimen/Card_elevation"
    android:layout_marginHorizontal="@dimen/fab_margin"
    android:layout_marginTop="@dimen/half_fab_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/pizza_image_s"
            android:layout_width="@dimen/image_dimen"
            android:layout_height="@dimen/image_dimen"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pizza_name_s"
            tool:src="image pizza"
            />

        <TextView
            android:id="@+id/pizza_name_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fab_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/pizza_description_s"
            app:layout_constraintStart_toEndOf="@id/pizza_image_s"
            tool:text="nombre pizza"
            />
        <TextView
            android:id="@+id/pizza_description_s"
            android:layout_width="@dimen/dimension_200"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingBottom="@dimen/Card_elevation"
            app:layout_constraintTop_toBottomOf="@id/pizza_name_s"
            app:layout_constraintStart_toEndOf="@id/pizza_image_s"
            app:layout_constraintBottom_toBottomOf="parent"
            tool:text="descripcion pizza"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>